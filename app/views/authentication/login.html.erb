<%= form_tag auth.login_path, action: "post" do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], class: "form-control" %>
  </div>
  <%= submit_tag "Sign in", class: "btn btn-primary" %> <%= link_to "Resend email verification", auth.verify_account_resend_path, class: "btn btn-default" %>
<% end %>
