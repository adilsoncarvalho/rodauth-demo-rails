<%= form_tag rodauth.login_path, action: "post" do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control" %>
    <small class="form-text text-danger"><%= rodauth.field_error("email") %></small>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], class: "form-control" %>
    <small class="form-text text-danger"><%= rodauth.field_error("password") %></small>
  </div>
  <%= submit_tag "Sign in", class: "btn btn-primary" %> <%= link_to "Reset password", rodauth.reset_password_request_path, class: "btn btn-default" %>
<% end %>
